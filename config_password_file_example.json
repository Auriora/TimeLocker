{
  "general": {
    "app_name": "TimeLocker",
    "version": "1.0.0",
    "log_level": "INFO",
    "data_dir": "/home/bcherrington/.cache/timelocker/data",
    "temp_dir": "/home/bcherrington/.cache/timelocker/temp",
    "max_concurrent_operations": 2,
    "default_repository": "local-test"
  },
  "backup": {
    "compression": "auto",
    "exclude_caches": true,
    "exclude_if_present": [
      ".nobackup",
      "CACHEDIR.TAG"
    ],
    "one_file_system": false,
    "check_before_backup": true,
    "verify_after_backup": true
  },
  "restore": {
    "verify_after_restore": true,
    "create_target_directory": true,
    "preserve_permissions": true,
    "conflict_resolution": "prompt"
  },
  "security": {
    "encryption_enabled": true,
    "audit_logging": true,
    "credential_timeout": 3600,
    "max_failed_attempts": 3,
    "lockout_duration": 300
  },
  "performance": {
    "parallel_uploads": 4,
    "parallel_downloads": 4,
    "upload_limit_kbps": 0,
    "download_limit_kbps": 0
  },
  "ui": {
    "theme": "auto",
    "show_progress": true,
    "confirm_destructive_operations": true
  },
  "repositories": {
    "local-test": {
      "location": "/tmp/test-backup",
      "description": "Local test repository",
      "password_file": "/home/bcherrington/.config/timelocker/passwords/local-test.txt"
    }
  },
  "backup_targets": {}
}

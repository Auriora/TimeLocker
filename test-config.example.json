{
  "_comment": "TimeLocker Test Configuration - Copy to test-config.json and customize",
  "repositories": [
    {
      "name": "minio-test",
      "uri": "s3:http://minio.local/timelocker-test/test-repo",
      "description": "MinIO test repository at minio.local (proxied via Traefik on port 80)",
      "default": true,
      "credentials": {
        "aws_access_key_id": "minioadmin",
        "aws_secret_access_key": "minioadmin123",
        "aws_default_region": "us-east-1"
      }
    },
    {
      "name": "minio-test-alt",
      "uri": "s3:http://minio.local/timelocker-test/test-repo-2",
      "description": "Alternative MinIO test repository",
      "default": false,
      "credentials": {
        "aws_access_key_id": "minioadmin",
        "aws_secret_access_key": "minioadmin123",
        "aws_default_region": "us-east-1"
      }
    },
    {
      "name": "local-filesystem",
      "uri": "file:///tmp/timelocker-test-repo",
      "description": "Local filesystem test repository",
      "default": false
    },
    {
      "name": "sftp-test",
      "uri": "sftp://user@localhost:/backup/timelocker",
      "description": "SFTP test repository (requires SFTP server)",
      "default": false
    }
  ],
  "targets": [
    {
      "name": "test-documents",
      "description": "Test documents backup target",
      "paths": [
        "/tmp/test-backup-source/documents"
      ],
      "exclude_patterns": [
        "*.tmp",
        "*.cache",
        "*.log",
        "__pycache__",
        ".git"
      ],
      "tags": [
        "test",
        "documents"
      ]
    },
    {
      "name": "test-small",
      "description": "Small test backup for quick testing",
      "paths": [
        "/tmp/test-backup-source/small"
      ],
      "exclude_patterns": [],
      "tags": [
        "test",
        "quick"
      ]
    },
    {
      "name": "test-large",
      "description": "Large test backup for performance testing",
      "paths": [
        "/tmp/test-backup-source/large"
      ],
      "exclude_patterns": [
        "*.iso",
        "*.img"
      ],
      "tags": [
        "test",
        "performance"
      ]
    }
  ],
  "retention": {
    "keep_last": 5,
    "keep_daily": 7,
    "keep_weekly": 4,
    "keep_monthly": 6,
    "keep_yearly": 2
  },
  "notifications": {
    "enabled": false,
    "desktop_enabled": false,
    "email_enabled": false,
    "notify_on_success": false,
    "notify_on_error": true
  },
  "performance": {
    "compression": "auto",
    "pack_size": 16,
    "upload_limit_kb": 0,
    "download_limit_kb": 0,
    "parallel_uploads": 4
  },
  "logging": {
    "level": "DEBUG",
    "file": "/tmp/timelocker-test.log",
    "console": true
  }
}

